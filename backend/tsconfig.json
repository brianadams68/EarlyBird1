{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts", // Include TypeScript files under src directory and its subdirectories
    "src/**/*.js" // Include JavaScript files under src directory and its subdirectories
  ],
  "exclude": [
    "node_modules" // Exclude the node_modules directory
  ]
}
